{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http:/www.kalisio.xyz/schemas/users.update-profile#",
  "title": "User Profile",
  "description": "User profile perspective",
  "type": "object",
  "properties": {
    "name": {
      "type": "string", 
      "maxLength": 128,
      "minLength": 3,
      "field": {
        "component": "form/KTextField",
        "label": "Name",
        "helper": "Type your name"
      }
    },
    "email": { 
      "type": "string", 
      "format": "email",
      "default": "nom@domaine.xyz",
      "field": {
        "component": "form/KEmailField",
        "label": "Email",
        "helper": "Type your email address"
      }
    },
    "phone": { 
      "type": "string",
      "field": {
        "component": "form/KPhoneField",
        "label": "Phone",
        "helper": "Type your phone number"
      }
    }
  },
  "required": ["name", "email", "phone"]
}

