{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http:/www.kalisio.xyz/schemas/users.update-profile#",
  "title": "User Profile",
  "description": "User profile perspective",
  "type": "object",
  "properties": {
    "name": {
      "type": "string", 
      "maxLength": 128,
      "minLength": 3,
      "field": {
        "component": "form/KTextField",
        "label": "Name",
        "helper": "Enter your name"
      }
    },
    "phone": { 
      "type": "string",
      "field": {
        "component": "form/KPhoneField",
        "label": "Phone",
        "helper": "Enter your phone number"
      }
    }
  },
  "required": ["name", "phone"]
}

